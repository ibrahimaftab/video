{
  "name": "sonicvibe",
  "version": "1.0.0",
  "description": "Creative, light and fast Html5 Player",
  "scripts": {
    "start": "concurrently \"tsc --watch\" \"tailwindcss -i ./src/styles.css -o ./dist/styles.css --watch --minify\"",
    "build": "npm run build:styles && npm run build:js && npm run minify:js",
    "compile:styles": "tailwindcss build -i src/styles.css -o dist/styles.css --minify",
    "compile:js": "tsc && npm run minify:js",
    "minify:js": "terser dist/*.js --module -o dist/main.js",
    "lint": "eslint --fix ."
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "@typescript-eslint/parser": "^6.20.0",
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-plugin-import": "^2.29.1",
    "postcss": "^8.4.33",
    "tailwindcss": "^3.4.1",
    "terser": "^5.27.0",
    "typescript": "^5.3.3"
  }
}
